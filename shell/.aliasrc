alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -vI"
alias ls="ls -hvN --color=auto --group-directories-first" # -N no ""
alias ll="ls -alh --color=auto"
alias grep="grep --color=auto"
alias dir="dir --color=auto"
alias mkdir="mkdir -v"
alias tree="tree --dirsfirst"
alias df="df -h"
alias du="du -h"

alias v="vifm"
alias z="zathura"
alias r="ranger"
alias nb="newsboat"
#alias wget="wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"" # or wgetrc
alias abook="abook --config "$XDG_CONFIG_HOME"/abook/abookrc --datafile "$XDG_CONFIG_HOME"/abook/addressbook"
alias restartnm="systemctl restart NetworkManager"
alias restartpm="xfce4-power-manager --restart"
alias t="transmission-remote"
alias rsh="pkill -USR1 redshift" # toggle redshift
alias sau="sudo apt update && apt list -u"
alias kbd="source ~/.config/X11/xsession &"
alias saU="sudo apt upgrade"
alias syu="sudo sudo pacman -Syu"
alias sdu="sudo dnf upgrade"
alias update-grub-fedora="sudo grub2-mkconfig -o /etc/grub2.cfg && sudo grub2-mkconfig -o /etc/grub2-efi.cfg"
alias bioscheck="[ -d /sys/firmware/efi ] && echo UEFI || echo BIOS"
alias brave-browser="flatpak run com.brave.Browser"

[[ $HOSTNAME = work2 ]] && alias vi="vimx"
[[ $HOSTNAME = work2 ]] && alias vim="vimx"
